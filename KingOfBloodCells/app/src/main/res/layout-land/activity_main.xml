<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RelativeLayout1">

    <TextView android:text="@string/prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FF00FF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/txtTitle" />

    <Button
        android:id="@+id/startOrNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtTitle"
        android:text="@string/start"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtTitle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bcp_01" />

    <Button
        android:id="@+id/OptionA"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgView" />

    <Button
        android:id="@+id/OptionB"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/OptionA" />

    <Button
        android:id="@+id/OptionC"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/OptionB" />

    <Button
        android:id="@+id/OptionD"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/OptionC" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:layout_below="@id/OptionD"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout>
